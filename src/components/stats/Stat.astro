---
interface Props {
  name: string;
  value: string;
}

const { name, value } = Astro.props;
---

<div class='not-content inline-flex flex-col items-center'>
  <div
    class='flex w-20 h-20 mx-auto p-2 items-center justify-center text-3xl font-bold tracking-tight rounded-full border-2 border-[--sl-color-text-accent] text-[--sl-color-text-accent] bg-accent-50 dark:bg-accent-950/50'
  >
    {value}
  </div>
  <div
    class='inline -mt-2 px-3 py-0.5 rounded text-center text-lg tracking-tight font-bold truncate text-[--sl-color-text-invert] bg-[--sl-color-text-accent]'
    title={name}
  >
    {name}
  </div>
</div>
